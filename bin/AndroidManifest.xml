<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.farmerpal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.farmerpal.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.farmerpal.FarmerDisplayActivity"
            android:label="@string/title_activity_farmer_display" >
        </activity>
        <activity
            android:name="com.example.farmerpal.MarketDisplayActivity"
            android:label="@string/title_activity_market_display" >
        </activity>
        <activity
            android:name="com.example.farmerpal.TopMarketDisplayActivity"
            android:label="@string/title_activity_top_market_display" >
        </activity>
        <activity
            android:name="com.example.farmerpal.AddItemActivity"
            android:label="@string/title_activity_add_item" >
        </activity>
    </application>

</manifest>
